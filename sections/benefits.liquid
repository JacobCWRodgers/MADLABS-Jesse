<section id="vinia-1000-grapes-section" class="vinia-1000-grapes-section">
  <div class="vinia-1000-container">
    <!-- Heading -->
    <div class="container">
      <h2 class="vinia-1000-heading">{{ section.settings.main_heading }}</h2>
      <h3 class="tagline">minus the sugar and calories</h3>
    </div>

    <!-- Subheading / Intro Text -->
    <div class="vinia-1000-subheading">
      {{ section.settings.main_subheading }}
    </div>

    <!-- Grape Image + Resveratrol Text -->
    <div class="vinia-1000-image-text">
      {% if section.settings.grape_image %}
        <p class="vinia-1000-resveratrol-text">
          6mg Red Grape <br>
          Piceid Resveratrol
        </p>
        <img
          class="vinia-1000-image"
          width="100"
          height="100"
          src="{{ section.settings.grape_image | img_url: 'master' }}"
          alt="Red Grape Powder"
        >
      {% endif %}
    </div>

    <!-- Stats Row -->
    <div class="vinia-1000-stats">
      <div class="vinia-1000-stat">
        <h3 class="vinia-1000-stat-heading">70% Increase In Arterial Dilation</h3>
        <p>
          Our clinical trial showed that VINIA® increased the dilation of arteries by at least 70% for each person who
          took VINIA® daily for 90 days.*
        </p>
      </div>
      <div class="content">
        <img
          src="https://cdn.shopify.com/s/files/1/0633/2494/6515/files/with_without.png?v=1740515081"
          width="100%"
          height="100%"
          alt=""
        >
        <div class="flex-container">
          <div class="stat-container">
            <div>
              <span>120%</span>
              <p>Increase in Nitric Oxide</p>
            </div>
            <p>
              Helping blood vessels dilate to promote proper blood flow. Our in vitro study showed that VINIA® boosts
              nitric oxide production by 120%.*
            </p>
          </div>
          <div class="stat-container">
            <div>
              <span style="margin-left: 8px;">50%</span>
              <p>Decrease in ET-1</p>
            </div>
            <p>
              ET-1 is a peptide that increases as you age, constricts blood vessels and slows down blood. Our in vitro
              study showed that VINIA® decreases Endothelin-1 by 50%.*
            </p>
          </div>
          <div class="links">
            <a id="clinicalsLink">Read Clinicals</a>
            <a
              href="{{ section.settings.button_link }}"
              class="brand-button"
              
              target="{{ section.settings.button_link_target }}"
            >
              <span class="reduced-button-font">Get Your VINIA®</span>
              <svg
                class="button_icon"
                width="35"
                style="top:1px;"
                height="35"
                viewBox="0 0 31 31"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path fill-rule="evenodd" clip-rule="evenodd" d="M1.37967 13.9546C0.51416 13.9546 -0.0938129 13.264 0.0441551 12.4214C0.0441551 12.4214 -0.0567875 12.9159 0.0465832 12.4094C1.4913 5.32976 7.80188 0 15.3679 0C24.0013 0 31 6.93959 31 15.5C31 24.0604 24.0013 31 15.3679 31C7.8103 31 1.50534 25.6821 0.0514221 18.6142C-0.0543118 18.1002 0.0439434 18.5772 0.0439434 18.5772C-0.0838394 17.7315 0.514858 17.0458 1.37971 17.0458H16.1567C16.7328 17.0458 16.8675 17.3732 16.4577 17.7769L13.6152 20.5835C12.1416 22.041 14.3525 24.2265 15.8261 22.7695L22.2019 16.5561C22.8183 15.9575 22.8172 14.9902 22.1945 14.3907L15.8261 8.23042C14.3525 6.77343 12.1416 8.95943 13.6152 10.4164L16.4577 13.2234C16.8676 13.6272 16.7305 13.9546 16.1567 13.9546L1.37967 13.9546Z" fill="#6F1645"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Buttons -->
    <div class="vinia-1000-buttons">
      {% if section.settings.read_clinicals_link != blank %}
        <a
          href="{{ section.settings.read_clinicals_link }}"
          class="vinia-1000-btn vinia-1000-btn-secondary"
        >
          {{ section.settings.read_clinicals_text }}
        </a>
      {% endif %}

      {% if section.settings.cta_link != blank %}
        <a
          href="{{ section.settings.cta_link }}"
          class="vinia-1000-btn vinia-1000-btn-primary"
        >
          {{ section.settings.cta_text }}
        </a>
      {% endif %}
    </div>
  </div>

  <style>
      /* Container */
      #vinia-1000-grapes-section .vinia-1000-container {
         
          margin: 0 auto;
          padding: 30px 20px;
          color: #6F1645;
          overflow: hidden;
      }

      #vinia-1000-grapes-section .container {
          margin: 35px 0;
          color: #6F1645;
      }

      /* Heading & Subheading */
      .vinia-1000-heading {
          margin: 0 0 3px 0;
          /* font-family: "Frank Ruhl Libre", serif; */
          text-align: center;
          font-weight: 400;
          font-size: 60px;
          padding: 0 18px;
          color: #6F1645;
          line-height: 62px;
      }

      #vinia-1000-grapes-section .vinia-1000-container .tagline {
          display: block;
          margin: 0;
          font-size: 30px;
          text-align: center;
          color: #6F1645;
          /* font-family: "Frank Ruhl Libre", serif; */
      }

      .vinia-1000-subheading {
          text-align: center;
          margin-bottom: 40px;
          line-height: 1.6em;
          /* font-family: "Noto Sans", serif; */
          line-height: 21.79px;
          font-weight: 400;
      }

      /* Image and Text Layout */
      .vinia-1000-image-text {
          display: flex;
          flex-wrap: wrap;
          align-items: center;
          justify-content: center;
          margin-bottom: 40px;
          gap: 20px;
          position: relative;
      }

      .vinia-1000-image {
          max-width: 700px;
          width: 100%;
          height: auto;
          display: block;
          margin-top: auto;
          margin-bottom: auto;
      }

      .vinia-1000-resveratrol-text {
          max-width: 400px;
          font-weight: 600;
          font-size: 20px;
          position: absolute;
          left: 0vw;
          top: 0;
          line-height: 28px;
      }

      /* Stats Row */
      .vinia-1000-stats {
          display: flex;
          flex-wrap: wrap;
          justify-content: center;
          gap: 30px;
          margin-bottom: 40px;
      }

      .vinia-1000-stat {
          text-align: center;
          flex: 1 1 180px;
          min-width: 180px;
      }

      .vinia-1000-stats .content img {
          width: 80vw;
          height: auto;
          margin: 0 auto;
      }

      .vinia-1000-stats .content {
          display: flex;
          flex-wrap: wrap;
      }

      .vinia-1000-stats .content span {
          font-size: 56px;
      }

      .stat-container p {
          font-size: 13.50px;
          margin: 0;
      }

      .stat-container div {
          display: flex;
          gap: 10px;
      }

      .stat-container div p {
          margin: 0;
          padding: 0;
          align-content: center;
          max-width: 31%;
          font-weight: 700;
      }

      .vinia-1000-stat-heading {
          margin-bottom: 8px;
          color: #6F1645;
          font-size: 48px;
          width: 77%;
          margin: 0 auto;
      }

      .vinia-1000-stat p {
          font-size: 14px;
      }

      /* Buttons */
      .vinia-1000-buttons {
          text-align: center;
          margin-top: 20px;
          display: flex;
          flex-wrap: wrap;
          justify-content: center;
          gap: 15px;
      }

      .vinia-1000-btn {
          display: inline-block;
          padding: 12px 24px;
          text-decoration: none;
          border-radius: 4px;
          font-weight: 600;
      }

      .vinia-1000-heading {
          font-size: 50px;
          padding: 0;
      }

      .vinia-1000-image-text {
          margin-top: 90px;
      }

      .vinia-1000-resveratrol-text {
          text-align: center;
          width: 100%;
          display: block;
          font-weight: 600;
          font-size: 20px;
          top: -50px;
      }

      .vinia-1000-image {
          width: 150vw;
          height: 150%;
          margin-left: -25vw;
          margin-top: 100px;
      }

      .vinia-1000-image-text {
          flex-direction: column;
      }

      .vinia-1000-stats {
          flex-direction: column;
          align-items: center;
      }

      /* Brand Buttons */
      .brand-buttons {
          grid-area: button;
          font-size: 22px;
          padding: 5px 1.1em;
          margin-right: 0%;
      }
    
      .brand-buttons span {
          font-weight: 700;
          font-size: 22px;
      }

      #clinicalsLink {
          text-decoration: underline;
      }

      /* Links */
      .links {
          display: flex;
          flex-wrap: wrap;
          flex-direction: column-reverse;
          justify-content: center;
          width: 100%;
          align-items: center;
          margin-top: 5vh;
      }

      /* Media Queries */
      @media (max-width: 768px) {
          .tagline {
              display: none !important;
          }
      }

      @media (min-width: 769px) {
          .vinia-1000-image {
            margin: auto 0;
          }
        .vinia-1000-stats {
          display: block;
        }

        .vinia-1000-stat {
          margin: 15vh auto;
        }

        .vinia-1000-stat p {
          width: 66%;
    margin: 10px auto;
        }
        .vinia-1000-stats .content {
          flex-wrap: nowrap;
        }

        .flex-container {
          padding: 20px;
        }

        .content {
          justify-content: center;
          gap: 150px;
        }
  .stat-container div {
    margin-bottom: -20px;
  }

  .vinia-1000-stats .content img {
    max-width: 27vw;
    margin: 0;
  }
        
        .stat-container p {
        margin-left: 10px;
        max-width: 500px;
  }

        .links {
          flex-wrap: nowrap;
          flex-direction: row;
          gap: 15px;
        }

        .reduced-button-font {
          font-size: 15px !important;
        }
      }
  </style>
</section>

{% schema %}
{
  "name": "Benefits",
  "settings": [
    {
      "type": "text",
      "id": "main_heading",
      "label": "Main Heading",
      "default": "The Health Benefits of <br> 1000 Grapes in Each Serving"
    },
    {
      "type": "textarea",
      "id": "main_subheading",
      "label": "Subheading Text",
      "default": "Meet VINIA® – a unique grape superfood containing the king of Polyphenols, Piceid Resveratrol, and other heart-supporting plant-based bioactives..."
    },
    {
      "type": "image_picker",
      "id": "grape_image",
      "label": "Grape/Powder Image"
    },
    {
      "type": "text",
      "id": "resveratrol_text",
      "label": "Resveratrol Text",
      "default": "6mg Red Grape Piceid Resveratrol"
    },
    {
      "type": "text",
      "id": "arterial_dilation",
      "label": "Increase In Arterial Dilation (%)",
      "default": "70"
    },
    {
      "type": "text",
      "id": "nitric_oxide",
      "label": "Increase in Nitric Oxide (%)",
      "default": "120"
    },
    {
      "type": "text",
      "id": "et1_decrease",
      "label": "Decrease in ET-1 (%)",
      "default": "50"
    },
    {
      "type": "text",
      "id": "read_clinicals_text",
      "label": "Read Clinicals Button Text",
      "default": "Read Clinicals"
    },
    {
      "type": "url",
      "id": "read_clinicals_link",
      "label": "Read Clinicals Button Link"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Button Text",
      "default": "Get Your VINIA"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Button Link"
    }
  ],
  "presets": [
    {
      "name": "benefits"
    }
  ]
}
{% endschema %}
