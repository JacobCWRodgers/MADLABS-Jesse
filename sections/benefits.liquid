<section id="vinia-1000-grapes-section" class="vinia-1000-grapes-section">
  <div class="vinia-1000-container">
    <!-- Heading -->
    <div class="container">
      <h2 class="vinia-1000-heading">{{ section.settings.main_heading }}</h2>
      <h3 class="tagline">minus the sugar and calories</h3>
    </div>

    <!-- Subheading / Intro Text -->
    <div class="vinia-1000-subheading">
      {{ section.settings.main_subheading }}
    </div>

    <!-- Grape Image + Resveratrol Text -->
    <div class="vinia-1000-image-text">
      {% if section.settings.grape_image %}
        <p class="vinia-1000-resveratrol-text">
          {{ section.settings.resveratrol_text }}
        </p>
        <img
          class="vinia-1000-image"
          src="{{ section.settings.grape_image | img_url: 'master' }}"
          alt="Red Grape Powder"
        >
      {% endif %}
    </div>

    <!-- Stats Row -->
    <div class="vinia-1000-stats">
      <div class="vinia-1000-stat">
        <h3 class="vinia-1000-stat-heading">{{ section.settings.arterial_dilation }}% Increase</h3>
        <p>In Arterial Dilation</p>
      </div>
      <div class="vinia-1000-stat">
        <h3 class="vinia-1000-stat-heading">{{ section.settings.nitric_oxide }}% Increase</h3>
        <p>In Nitric Oxide</p>
      </div>
      <div class="vinia-1000-stat">
        <h3 class="vinia-1000-stat-heading">{{ section.settings.et1_decrease }}% Decrease</h3>
        <p>In ET-1</p>
      </div>
    </div>

    <!-- Buttons -->
    <div class="vinia-1000-buttons">
      {% if section.settings.read_clinicals_link != blank %}
        <a
          href="{{ section.settings.read_clinicals_link }}"
          class="vinia-1000-btn vinia-1000-btn-secondary"
        >
          {{ section.settings.read_clinicals_text }}
        </a>
      {% endif %}

      {% if section.settings.cta_link != blank %}
        <a
          href="{{ section.settings.cta_link }}"
          class="vinia-1000-btn vinia-1000-btn-primary"
        >
          {{ section.settings.cta_text }}
        </a>
      {% endif %}
    </div>
  </div>

  <style>
    /* Container */
    #vinia-1000-grapes-section .vinia-1000-container {
      max-width: 900px;
      margin: 0 auto;
      padding: 30px 20px;
      color: #6F1645;
    }

    #vinia-1000-grapes-section .container{
      margin: 35px 0;
      color: #6F1645;
    }

    /* Heading & Subheading */
    .vinia-1000-heading {
      margin: 0 0 3px 0;
      /* font-family: "Frank Ruhl Libre", serif; */
      text-align: center;
      font-weight: 400;
      font-size: 60px;
      padding: 0 18px;
      color: #6F1645;
      line-height: 62px;
    }

    #vinia-1000-grapes-section .vinia-1000-container .tagline {
      display: block;
      margin: 0;
      font-size: 30px;
      text-align: center;
      color: #6F1645;
       /* font-family: "Frank Ruhl Libre", serif; */
    }



    .vinia-1000-subheading {
      text-align: center;
      margin-bottom: 40px;
      line-height: 1.6em;
      /* font-family: "Noto Sans", serif; */
      line-height: 21.79px;
      font-weight: 400;
      text-align: center;
    }


    .vinia-1000-image-text {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      justify-content: center;
      margin-bottom: 40px;
      gap: 20px;
      position: relative;
    }
    .vinia-1000-image {
      max-width: 500px;
      width: 100%;
      height: auto;
      display: block;
    }
    .vinia-1000-resveratrol-text {
      max-width: 400px;
      text-align: center;
      font-weight: 600;
      position: absolute;
      left: 10vw;
      top: 0;
    }

    /* Stats row */
    .vinia-1000-stats {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 30px;
      margin-bottom: 40px;
    }
    .vinia-1000-stat {
      text-align: center;
      flex: 1 1 180px;
      min-width: 180px;
    }
    .vinia-1000-stat-heading {
      margin-bottom: 8px;
      color: #7a073e; /* Example color */
    }

    /* Buttons */
    .vinia-1000-buttons {
      text-align: center;
      margin-top: 20px;
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 15px;
    }
    .vinia-1000-btn {
      display: inline-block;
      padding: 12px 24px;
      text-decoration: none;
      border-radius: 4px;
      font-weight: 600;
      color: #fff;
    }
    .vinia-1000-btn-primary {
      background-color: #7a073e; /* Example color */
    }
    .vinia-1000-btn-secondary {
      background-color: #c24676; /* Example color */
    }

    /* Basic Mobile Responsiveness */
    @media (max-width: 768px) {
      .vinia-1000-image-text {
        flex-direction: column;
      }
      .vinia-1000-stats {
        flex-direction: column;
        align-items: center;
      }
    }
  </style>
</section>

{% schema %}
{
  "name": "Benefits",
  "settings": [
    {
      "type": "text",
      "id": "main_heading",
      "label": "Main Heading",
      "default": "The Health Benefits of <br> 1000 Grapes in Each Serving"
    },
    {
      "type": "textarea",
      "id": "main_subheading",
      "label": "Subheading Text",
      "default": "Meet VINIA® – a unique grape superfood containing the king of Polyphenols, Piceid Resveratrol, and other heart-supporting plant-based bioactives..."
    },
    {
      "type": "image_picker",
      "id": "grape_image",
      "label": "Grape/Powder Image"
    },
    {
      "type": "text",
      "id": "resveratrol_text",
      "label": "Resveratrol Text",
      "default": "6mg Red Grape Piceid Resveratrol"
    },
    {
      "type": "text",
      "id": "arterial_dilation",
      "label": "Increase In Arterial Dilation (%)",
      "default": "70"
    },
    {
      "type": "text",
      "id": "nitric_oxide",
      "label": "Increase in Nitric Oxide (%)",
      "default": "120"
    },
    {
      "type": "text",
      "id": "et1_decrease",
      "label": "Decrease in ET-1 (%)",
      "default": "50"
    },
    {
      "type": "text",
      "id": "read_clinicals_text",
      "label": "Read Clinicals Button Text",
      "default": "Read Clinicals"
    },
    {
      "type": "url",
      "id": "read_clinicals_link",
      "label": "Read Clinicals Button Link"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Button Text",
      "default": "Get Your VINIA"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Button Link"
    }
  ],
  "presets": [
    {
      "name": "benefits"
    }
  ]
}
{% endschema %}
