{% comment %}
  Heart Health Banner Section
  - Mobile & desktop responsive
  - Allows easy content updates through theme customizer
{% endcomment %}

<section id="heart-health-banner" class="heart-health-banner-section">
  <div class="banner-wrapper">
    <!-- Mobile Image -->

    <!-- Desktop Image -->
    <div class="banner-image desktop-image">
      {% if section.settings.desktop_image %}
        <img
          width="100"
          height="100"
          src="{{ section.settings.desktop_image | img_url: 'x720' }}"
          alt="{{ section.settings.desktop_image_alt | escape }}"
        >
      {% endif %}
    </div>

    <!-- Text/Content Container -->
    <div class="banner-content">
      {% if section.settings.tagline != '' %}
        <h4 class="banner-tagline">{{ section.settings.tagline }}</h4>
      {% endif %}

      {% if section.settings.headline != '' %}
        <h2 class="banner-headline">{{ section.settings.headline }}</h2>
      {% endif %}

      {% if section.settings.subheading != '' %}
        <p class="banner-subheading">{{ section.settings.subheading }}</p>
      {% endif %}

      {% if section.settings.offer_amount != '' %}
        <div class="banner-offer">
          <span class="offer-amount">{{ section.settings.offer_amount }}</span>
          {% if section.settings.offer_details != '' %}
            <p class="offer-details">{{ section.settings.offer_details }}</p>
          {% endif %}
        </div>
      {% endif %}

      {% if section.settings.button_label != '' %}
        <a
          href="{{ section.settings.button_link }}"
          class="banner-button"
          target="{{ section.settings.button_link_target }}"
        >
          {{ section.settings.button_label }}
        </a>
      {% endif %}

      {% if section.settings.footer_note != '' %}
        <p class="banner-footer-note">{{ section.settings.footer_note }}</p>
      {% endif %}
      <div class="banner-image mobile-image">
        {% if section.settings.mobile_image %}
          <img
            width="100%"
            height="100%"
            src="{{ section.settings.mobile_image | img_url: 'x720' }}"
            alt="{{ section.settings.mobile_image_alt | escape }}"
          >
        {% endif %}
      </div>
    </div>
    <!-- .banner-content -->
  </div>
  <!-- .banner-wrapper -->
</section>

<style>
  #heart-health-banner {
    padding: 20px;
    background-color: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
  }
  .banner-wrapper {
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
  }

  /* Images */
  .banner-image {
    width: 100%;
    text-align: center;
  }
  .banner-image img {
    max-width: 100%;
    height: auto;
    display: block;
    margin: 0 auto;
  }

  /* Hide desktop image on mobile, hide mobile image on desktop */
  .mobile-image { display: block; }
  .desktop-image { display: none; }

  /* Content area */
  .banner-content {
    width: 100%;
    text-align: center;
    margin-top: 20px;
  }
  #heart-health-banner .banner-tagline {
    margin: 0;
    font-size: 3rem;
    font-weight: normal;
    text-transform: capitalize;
    color: white;
    font-weight: 600;
  }
  .banner-headline {
    margin: 10px 0 0;
    font-size: 2rem;
    line-height: 1.2em;
  }
  .banner-subheading {
    margin: 10px 0;
    font-size: 1.2rem;
  }
  .banner-offer .offer-amount {
    font-size: 3rem;
    font-weight: bold;
    display: block;
    margin-top: 10px;
  }
  .banner-offer .offer-details {
    margin-top: 5px;
    font-size: 1rem;
  }
  .banner-button {
    display: inline-block;
    margin-top: 20px;
    padding: 10px 20px;
    background-color: {{ section.settings.button_background_color }};
    color: {{ section.settings.button_text_color }};
    text-decoration: none;
    border-radius: 4px;
    font-weight: 600;
  }
  .banner-button:hover {
    opacity: 0.9;
  }
  .banner-footer-note {
    margin-top: 15px;
    font-size: 0.9rem;
    opacity: 0.8;
  }

  /* Desktop responsive */
  @media (min-width: 768px) {
    .mobile-image { display: none; }
    .desktop-image { display: block; }

    .banner-wrapper {
      flex-wrap: nowrap;
      justify-content: space-between;
    }
    .banner-image,
    .banner-content {
      width: 48%;
    }
    .banner-content {
      text-align: left;
      margin-top: 0;
    }
  }
</style>

