{% comment %}
  Heart Health Banner Section
  - Mobile & desktop responsive
  - Allows easy content updates through theme customizer
{% endcomment %}

<section id="heart-health-banner" class="heart-health-banner-section">
  <div class="banner-wrapper">
    <!-- Mobile Image -->

    <!-- Desktop Image -->
    <div class="banner-image desktop-image">
      {% if section.settings.desktop_image %}
        <img
          width="100"
          height="100"
          src="{{ section.settings.desktop_image | img_url: 'x720' }}"
          alt="{{ section.settings.desktop_image_alt | escape }}"
        >
      {% endif %}
    </div>

    <!-- Text/Content Container -->
    <div class="banner-content">
      {% if section.settings.tagline != '' %}
        <h4 class="banner-tagline">{{ section.settings.tagline }}</h4>
      {% endif %}

      {% if section.settings.headline != '' %}
        <h2 class="banner-headline">{{ section.settings.headline }}</h2>
        <p class="offer-amount">{{ section.settings.offer_amount }}</p>
      {% endif %}

      {% if section.settings.offer_amount != '' %}
        {% if section.settings.offer_details != '' %}
          <p class="offer-details">{{ section.settings.offer_details }}</p>
        {% endif %}
      {% endif %}

      {% if section.settings.button_label != '' %}
        <a
          href="{{ section.settings.button_link }}"
          class="brand-button"
          target="{{ section.settings.button_link_target }}"
        >
          <span>{{ section.settings.button_label }}</span>
          <svg
            class="button_icon"
            width="31"
            height="31"
            viewBox="0 0 31 31"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path fill-rule="evenodd" clip-rule="evenodd" d="M1.37967 13.9546C0.51416 13.9546 -0.0938129 13.264 0.0441551 12.4214C0.0441551 12.4214 -0.0567875 12.9159 0.0465832 12.4094C1.4913 5.32976 7.80188 0 15.3679 0C24.0013 0 31 6.93959 31 15.5C31 24.0604 24.0013 31 15.3679 31C7.8103 31 1.50534 25.6821 0.0514221 18.6142C-0.0543118 18.1002 0.0439434 18.5772 0.0439434 18.5772C-0.0838394 17.7315 0.514858 17.0458 1.37971 17.0458H16.1567C16.7328 17.0458 16.8675 17.3732 16.4577 17.7769L13.6152 20.5835C12.1416 22.041 14.3525 24.2265 15.8261 22.7695L22.2019 16.5561C22.8183 15.9575 22.8172 14.9902 22.1945 14.3907L15.8261 8.23042C14.3525 6.77343 12.1416 8.95943 13.6152 10.4164L16.4577 13.2234C16.8676 13.6272 16.7305 13.9546 16.1567 13.9546L1.37967 13.9546Z" fill="#6F1645"/>
          </svg>
        </a>
      {% endif %}

      <div class="banner-image mobile-image">
        {% if section.settings.mobile_image %}
          <img
            width="100%"
            height="100%"
            src="{{ section.settings.mobile_image | img_url: 'x720' }}"
            alt="{{ section.settings.mobile_image_alt | escape }}"
          >
        {% endif %}
      </div>
      {% if section.settings.footer_note != '' %}
        <p class="banner-footer-note">{{ section.settings.footer_note }}</p>
      {% endif %}
    </div>
    <!-- .banner-content -->
  </div>
  <!-- .banner-wrapper -->
</section>

<style>
  #heart-health-banner {
    padding: 20px;
    background-color: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
  }
  .banner-wrapper {
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
  }

  /* Images */
  .banner-image {
    width: 100%;
    text-align: center;
  }
  .banner-image img {
    max-width: 100%;
    height: auto;
    display: block;
    margin: 0 auto;
  }

  /* Hide desktop image on mobile, hide mobile image on desktop */
  .mobile-image { display: block; }
  .desktop-image { display: none; }

  /* Content area */
  .banner-content {
    width: 100%;
    text-align: center;
    margin-top: 20px;
  }
  #heart-health-banner .banner-tagline {
    margin: 10px 0;
    font-size: 38.35px;
    line-height: 45px;
    text-transform: capitalize;
    color: white;
    font-weight: 400;
    text-align: center;
  }
  .banner-headline {
    text-align: center;
    margin: 10px 0 0 0;
    font-size: 20px;
    line-height: 22px;
    color: white;
    line-height: 1.2em;
    padding: 0 1.4em;
  }
  .banner-subheading {
    margin: 10px 0;
    font-size: 1.2rem;
  }
  .offer-amount {
    margin: -32px 0;
    font-size: 88px;
    font-weight: 400;
    text-align: center;
  }

  .offer-details {
    margin: 0;
    padding: 0 50px;
    font-size: 16px;
    font-weight: 400;
    text-align: center;
  }

  .banner-footer-note {
    margin-top: 15px;
    font-size: 0.9rem;
    opacity: 0.8;
  }



  /* Desktop responsive */
  @media (min-width: 768px) {
    .mobile-image { display: none; }
    .desktop-image { display: block; }

    .banner-wrapper {
      flex-wrap: nowrap;
      justify-content: space-between;
    }
    .banner-image,
    .banner-content {
      width: 48%;
    }
    .banner-content {
      text-align: left;
      margin-top: 0;
    }
  }
</style>

